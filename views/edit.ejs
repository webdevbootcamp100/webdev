<%- include('partials/header') %>  

<div class="ui main text container segment">
	
	<div class="ui huge header">Edit <%= campss.title %></div>    
	
	<form class="ui form" action="/campgrounds/<%= campss._id %>?_method=PUT" method="POST">           
		
	<div class="field">
		<label for="title">Title :</label>
	    <input type="text" name="campss[title]" id="title" value="<%= campss.title %>">  	
	</div>	
		
	<div class="field">
		<label for="img">Image URL :</label>	
	    <input type="text" name="campss[image]" id="img" value="<%= campss.image %>">	
	</div>
	
	<div class="field">
		<label for="desc">Description :</label>	
		<textarea name="campss[body]" id="desc"><%= campss.body %></textarea>  
	</div>	 
		
	<button class="ui purple button">Submit</button>
		    
    </form>
	 
</div>

<%- include('partials/footer') %>  